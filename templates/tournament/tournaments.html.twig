{% extends 'base.html.twig' %}

{% block title %}Hello TournamentController!{% endblock %}

{% block body %}


  <div class="max-w-7xl mx-auto mt-10">

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          {% for key in tournamentsList %}
            <div class="mx-auto">
              <div class="max-w-xs cursor-pointer rounded-lg bg-white p-2 shadow duration-150 hover:scale-105 hover:shadow-md">
                <img class="w-full rounded-lg object-cover object-center" src="https://images.unsplash.com/photo-1511556532299-8f662fc26c06?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="product" />
                <p class="my-4 pl-4 font-bold text-gray-500">{{key.name}}</p>
                <p class="mb-4 ml-4 text-xl font-semibold text-gray-800">{{key.date|date("d/m/Y", "Europe/Paris")}} au {{key.echeance|date("d/m/Y", "Europe/Paris")}}</p>
              </div>
            </div>
            {% endfor %}  
        </div>

        <button class="bg-green-700 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
          Ajouter
        </button>

  </div>




{% endblock %}
