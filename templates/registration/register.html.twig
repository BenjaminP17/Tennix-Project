{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded shadow-md max-w-md w-full mx-auto">

        <h2 class="text-2xl font-semibold mb-4">Inscription</h2>

        <form action="#" method="POST">

                    {{ form_errors(registrationForm) }}
                    <script src="https://cdn.tailwindcss.com"></script>
                    {{ form_start(registrationForm) }}
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            {{ form_row(registrationForm.firstname, {
                            'label': 'Prénom',
                            'attr': {
                                'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500',
                                'placeholder': 'Entrez votre prénom',
                            },
                            'label_attr': {
                                'class': 'block text-gray-700 text-sm font-bold mb-2'
                            }
                            }) }}
                        </div>
                        <div>
                        {{ form_row(registrationForm.name, {
                            'label': 'Nom',
                            'attr': {
                                'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500',
                                'placeholder': 'Entrez votre nom',
                            },
                            'label_attr': {
                                'class': 'block text-gray-700 text-sm font-bold mb-2'
                            }
                        }) }}
                        </div>
        
                    </div>
                    <div>
                    {{ form_row(registrationForm.email, {
                            'attr': {
                                'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500',
                                'placeholder': 'Entrez votre email',
                            },
                            'label_attr': {
                                'class': 'block text-gray-700 text-sm font-bold mb-2 mt-5'
                            }
                        }) }}
                    </div>
                    <div>
                        {{ form_row(registrationForm.plainPassword.first, {
                                'attr': {
                                    'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500',
                                    'placeholder': 'Entrez un mot de passe',
                                },
                                'label_attr': {
                                    'class': 'block text-gray-700 text-sm font-bold mb-2 mt-5'
                                }
                            }) }}
                        </div>
                        {{ form_row(registrationForm.plainPassword.second, {
                            'attr': {
                                'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500',
                                'placeholder': 'Entrez un mot de passe',
                            },
                            'label_attr': {
                                'class': 'block text-gray-700 text-sm font-bold mb-2 mt-5'
                            }
                        }) }}
                        <div class="mt-6">
                            <button type="submit" class="w-full p-3 bg-green-800 text-white rounded-md hover:bg-blue-600">S'inscrire</button>
                        </div>
                    </div>
                    

                    
                {{ form_end(registrationForm) }}
        </form>
    </div>
</body>


{% endblock %}




